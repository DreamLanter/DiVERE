# MANIFEST.in - 指定打包时需要包含的文件
# 用于确保所有必要的配置文件、资源文件和模型文件都被包含在分发包中

# 包含所有配置文件
recursive-include divere/config *.json *.icc

# 包含模型文件
include divere/models/*.onnx
recursive-include divere/models *.py

# 包含资源文件
recursive-include divere/assets *.png *.ai

# 包含文档文件
include README.md
include LICENSE
include ARCHITECTURE.md
include PRESET_SCHEMA.md
include pipeline.md

# 包含版本和发布相关文件
include release.sh
include requirements.txt

# 排除不必要的文件
exclude test_scans/*
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
exclude TODO.md
exclude CLAUDE.md